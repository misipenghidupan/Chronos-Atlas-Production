# .env.dev - Development-specific overrides.
# This file is only loaded when running the 'dev' stack.

# ----------------------------------------
# DJANGO SETTINGS (DEV)
# ----------------------------------------
DEBUG=True
# Allow connections from localhost and the Docker IP range
ALLOWED_HOSTS=127.0.0.1,localhost,0.0.0.0
# CORS origins for local frontend development (e.g., React on port 3000)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000