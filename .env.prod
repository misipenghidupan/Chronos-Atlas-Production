# .env.prod - Production secrets and configuration.
# This file is only loaded when running the 'prod' stack.

# ----------------------------------------
# DJANGO SECRETS (PRODUCTION)
# ----------------------------------------
DEBUG=False
# CRITICAL: GENERATE A NEW, LONG, SECURE KEY FOR PRODUCTION
SECRET_KEY='[YOUR_PRODUCTION_SECRET_KEY_HERE_!!!]'

# CRITICAL: Replace with your actual domain(s)
ALLOWED_HOSTS=[your-production-domain.com],www.[your-production-domain.com] 
CORS_ALLOWED_ORIGINS=https://[your-production-domain.com]

# ----------------------------------------
# DATABASE URL (CLOUD CONNECTION)
# ----------------------------------------
# CRITICAL: This variable is used by dj_database_url in settings.prod to connect 
# to your external database (e.g., AWS RDS, DigitalOcean, etc.). 
# Format: postgres://USER:PASSWORD@HOST:PORT/NAME
DATABASE_URL='[YOUR_EXTERNAL_POSTGRES_CONNECTION_STRING_HERE]'